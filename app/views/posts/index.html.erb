<% provide(:title, 'My Gifs') %>
 <br />
  <div class="masonry">
    <% current_user.posts.each do |post| %>
      <div class="item col-lg-4 col-md-4 col-sm-4 col-xs-6">
        <div class="contentBox">
          <%= image_tag post.image, class: 'img-responsive' %><br />
          <strong>Name: </strong><%= post.name %><br />
          <strong>Tags: </strong><%= post.tag %><br />
          <strong>Categories: </strong><%= post.category %><br /><br />
          <%= link_to 'Edit', edit_post_path(post) %> | 
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %><br />
        </div>
      </div>
    <% end %>
  </div>

<br>