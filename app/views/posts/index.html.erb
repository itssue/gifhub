<% provide(:title, 'My Gifs') %>
 <br />
  <div class="masonry">
    <% current_user.posts.each do |post| %>
      <div class="item col-lg-4 col-md-4 col-sm-4 col-xs-6">
        <div class="contentBox">
          <%= image_tag post.image, class: 'img-responsive' %>
          <div class="postName"><%= post.name %></div>
          <div class="postTags"><strong>TAGS</strong> / <%= post.tag %></div>
          <div class="postCats"><strong>CATEGORIES</strong> / <%= post.category %></div><br />
          <div class="postEdit"><%= link_to 'edit', edit_post_path(post) %> | 
          <%= link_to 'delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
    <% end %>
  </div>

<br>