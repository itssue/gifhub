<% provide(:title, 'Welcome') %>
<% unless user_signed_in? -%>
  <p><%= link_to 'Sign up as User', new_user_registration_path %></p>
  <p><%= link_to 'Sign in as User', new_user_session_path %></p>
<% end -%>

<h1>GIFs</h1>
<% if user_signed_in? %>
  <div class="masonry">
    <% @posts.each do |post| %>
      <div class="item col-lg-4 col-md-4 col-sm-4 col-xs-6">
        <div class="contentBox">
          <%= image_tag post.image, class: 'img-responsive' %><br />
          <strong>Name: </strong><%= post.name %><br />
          <strong>Tags: </strong><%= post.tag %><br />
          <strong>Categories: </strong><%= post.category %><br />
        </div>
      </div>
    <% end %>
  </div>

  <br />
<% end %>